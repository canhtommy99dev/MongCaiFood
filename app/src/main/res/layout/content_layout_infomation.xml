<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBC1C1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map"/>
        <TextView
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"
            android:id="@+id/txtaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/information"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:layout_gravity="center"
        android:id="@+id/tspmmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cửa hàng:"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/txttimeopenclose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" -- Thời gian:"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/txtphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" -- Số điện thoại:"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/txtFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" -- Facebook:"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shipped"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/txtShipDoAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" -- Ship đồ ăn:"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"/>
    <TextView
        android:layout_marginLeft="10sp"
        android:id="@+id/textView8c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Một Số Ảnh Về Quán"
        android:textColor="#fff"
        android:textSize="20sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnComment"
        android:layout_gravity="center"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="Thêm Bình Luận"
        android:textColor="#fff" />

    <TextView
        android:textColor="#fff"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment Đánh Giá" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvcommon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>