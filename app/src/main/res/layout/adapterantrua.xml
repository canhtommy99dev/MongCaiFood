<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgCuaHangDoLen2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/ic_image_black_24dp"/>
            <ImageView
                android:layout_marginLeft="10sp"
                android:layout_marginTop="130dp"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/shopmctitle"/>
            <TextView

                android:id="@+id/txtTenCH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="demo"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="130dp"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="160dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="#FDEE77">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10sp"
                        android:layout_gravity="center"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/navigation"/>

                    <TextView
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/txtDiaChi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="Địa Chỉ" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10sp"
                        android:layout_gravity="center"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/callphone"/>
                    <TextView
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/txtsdtGoi2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="SĐT" />
                </LinearLayout>

                <TextView
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtFB2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Facebook" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>